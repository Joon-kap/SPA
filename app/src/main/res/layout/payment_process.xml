<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You finish your parking on "
        android:textColor="#4c4c49"
        android:textAlignment="center"
        android:textSize="@dimen/abc_text_size_medium_material"
        android:id="@+id/infront" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:id="@+id/textSpot"
        android:textColor="#4c4c49"
        android:textSize="@dimen/abc_text_size_medium_material" />

<!--        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" at "
            android:id="@+id/textAt"
            android:textColor="#4c4c49"
            android:textSize="@dimen/abc_text_size_medium_material" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12:00"
            android:id="@+id/textTime"
            android:textColor="#4c4c49"
            android:textSize="@dimen/abc_text_size_medium_material" />
-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="."
            android:id="@+id/textDot"
            android:textColor="#4c4c49"
            android:textSize="@dimen/abc_text_size_medium_material" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="From now on the payment\nfor parkng will be charged.\n\nIf you are going to go out,\nplease press the payment button."
        android:textColor="#4c4c49"
        android:textAlignment="center"
        android:textSize="@dimen/abc_text_size_medium_material"
        android:id="@+id/text" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="\n"
        android:textColor="#4c4c49" />

    <Button
        android:id="@+id/paymentBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical"
        android:gravity="center"
        android:drawableTop="@drawable/pay_button_icon"
        android:text="Click for Next Step!"
        android:background="#00000000" />


</LinearLayout>